<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#065E60">

<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="10dp"
    android:src="@mipmap/newupdateonelogo_round"
    android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/usernamee"
        android:layout_marginTop="6dp"
        android:layout_marginStart="12dp"
        android:paddingTop="1dp"
        android:textSize="18sp"
        android:text="Suneo : Daily Earning App"
        android:textColor="@color/white"
        style="bold"
        android:fontFamily="@font/bold" />

    <TextView
        android:id="@+id/personal_dataa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/regular"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:text="Earn real cash daily"
        android:textColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/newupdateonelogo_background"/>



</LinearLayout>