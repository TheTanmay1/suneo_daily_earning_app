<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">


    <TextView
        android:id="@+id/pehlawalaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/termss"
        android:textSize="45sp"
        android:textStyle="bold"
        android:background="@drawable/selected_option_shape_primary"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/secondwaala"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/secondwaala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pehlawalaa"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/selected_option_shape_primary"
        android:padding="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="6dp"
        android:text="@string/privacy_policy"
        android:textColor="#FFCECE"
        android:textStyle="normal"
        android:textSize="25sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>